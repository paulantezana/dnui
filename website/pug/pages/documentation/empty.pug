extends ../../config/template
append config
    -title = "Empty"
    -description = "Empty state placeholder."
    -ogUrl = "/documentation/empty.html"
    -template = 2
block main
    .pd-grid.col-gap.row-gap.l-grid-2
        +codeBox(
            'Basic',
            'Simplest Usage.',
            '<div class="pd-empty">\n    <img src="/assets/images/empty.svg" alt="empty">\n    <p>There is no data</p>\n</div>\n'
        )
            .pd-empty
                img(src="/assets/images/empty.svg", alt="empty")
                p There is no data
    h2 API
    .pd-table-wrapper
        table.pd-table.DocApiTable
            thead
                tr
                    th Property
                    th Class
            tbody
                tr
                    td Empty
                    td
                        code .pd-empty
