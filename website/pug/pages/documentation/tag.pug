extends ../../config/template
append config
    -title = "Tag"
    -description = "Tag for categorizing or markup."
    -ogUrl = "/documentation/tag.html"
    -template = 2

block main
    .pd-grid.col-gap.row-gap.l-grid-2
        +codeBox(
            'Basic',
            'Usage of basic Tag',
            '<span class="pd-tag">default</span>\n<span class="pd-tag primary">primary</span>\n<span class="pd-tag success">success</span>\n<span class="pd-tag warning">warning</span>\n<span class="pd-tag danger">danger</span>\n'
        )
            span.pd-tag default
            span.pd-tag.primary primary
            span.pd-tag.success success
            span.pd-tag.warning warning
            span.pd-tag.danger danger
    h2 API
    .pd-table-wrapper
        table.pd-table.DocApiTable
            thead
                tr
                    th Property
                    th Class
            tbody
                tr
                    td Tag
                    td
                        code .pd-tag
                tr
                    td Color
                    td
                        code .primary
                        code .success
                        code .warning
                        code .danger
