            .CodeBox-code
                script.
                    let onConfirmConfirm = ()=>{
                        PdModal.confirm({
                            title: 'Do you Want to delete these items?',
                            content: 'Some descriptions',
                            onOk() {
                                PdMessage.info({
                                    content: 'onOk'
                                });
                            },
                            onCancel() {
                                PdMessage.info({
                                    content: 'onCancel'
                                });
                            }
                        });
                    }
                    let onConfirmDelete = ()=>{
                        PdModal.confirm({
                            title: 'Are you sure delete this task?',
                            content: 'Some descriptions',
                            okText: 'Yes',
                            okClassNames: 'danger',
                            cancelText: 'No',
                            onOk() {
                                PdMessage.info({
                                    content: 'onOk'
                                });
                            },
                            onCancel() {
                                PdMessage.info({
                                    content: 'onCancel'
                                });
                            }
                        });
                    }
                    let onConfirmCancel = ()=>{
                        PdModal.confirm({
                            title: 'Are you sure cancel this task?',
                            content: 'Some descriptions',
                            input: true,
                            inputValue: 'Cancel by mistake',
                            okText: 'Yes',
                            okClassNames: 'danger',
                            cancelText: 'No',
                            onOk(message) {
                                PdMessage.info({
                                    content: 'Ok = ' + message
                                });
                            },
                            onCancel(message) {
                                PdMessage.info({
                                    content: 'Cancel = ' + message
                                });
                            }
                        });
                    }
