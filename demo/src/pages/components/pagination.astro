  <section>
    <h2>API</h2>
    <div class="dn-table-wrapper">
      <table class="dn-table">
        <thead>
          <tr>
            <th>Property</th>
            <th>Class</th>
            <th>Description</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>Pagination</td>
            <td><code>.dn-pagination</code></td>
            <td>Pagination container</td>
          </tr>
          <tr>
            <td>Pagination List</td>
            <td><code>.dn-pagination-list</code></td>
            <td>List container for pagination items</td>
          </tr>
          <tr>
            <td>Pagination Item</td>
            <td><code>.dn-pagination-item</code></td>
            <td>Individual pagination item</td>
          </tr>
          <tr>
            <td>Pagination Link</td>
            <td><code>.dn-pagination-link</code></td>
            <td>Clickable pagination link</td>
          </tr>
          <tr>
            <td>Active State</td>
            <td><code>.active</code></td>
            <td>Current active page</td>
          </tr>
          <tr>
            <td>Disabled State</td>
            <td><code>.disabled</code></td>
            <td>Disabled pagination link</td>
          </tr>
          <tr>
            <td>Ellipsis</td>
            <td><code>.dn-pagination-ellipsis</code></td>
            <td>Ellipsis indicator for skipped pages</td>
          </tr>
          <tr>
            <td>Simple Style</td>
            <td><code>.simple</code></td>
            <td>Minimal pagination style</td>
          </tr>
          <tr>
            <td>Pagination Info</td>
            <td><code>.dn-pagination-info</code></td>
            <td>Current page information</td>
          </tr>
          <tr>
            <td>Pagination Details</td>
            <td><code>.dn-pagination-details</code></td>
            <td>Results count information</td>
          </tr>
          <tr>
            <td>Wrapper</td>
            <td><code>.dn-pagination-wrapper</code></td>
            <td>Container for pagination and details</td>
          </tr>
          <tr>
            <td>Sizes</td>
            <td><code>.sm</code> <code>.lg</code></td>
            <td>Pagination size variants</td>
          </tr>
        </tbody>
      </table>
