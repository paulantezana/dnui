    <CodeBox
      title="Navigation initialization"
      description="JavaScript initialization for interactive navigation"
      examples={[{
        language: 'javascript',
        code: `// Initialize navigation
const navigation = new PdNavigation('.dn-navigation', {
  responsive: true,
  dropdownHover: false,
  mobileBreakpoint: 768,
  autoClose: true
});

// Manual control
navigation.toggleMobile();
navigation.closeMobile();
navigation.openDropdown('.dn-nav-dropdown');
navigation.closeDropdown('.dn-nav-dropdown');

// Event listeners
navigation.on('mobileToggle', (isOpen) => {
  console.log('Mobile menu toggled:', isOpen);
});

navigation.on('dropdownOpen', (dropdown) => {
  console.log('Dropdown opened:', dropdown);
});`
      }]}
