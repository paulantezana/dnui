                }
              },
              {
                title: 'IGV factor',
                field: 'tax_factor',
                filterable: true,
                sortable: true,
                visible: false,
                customRender: (item) => {
                  return `${parseFloat(item.tax_factor || 0).toFixed(2)}`;
                }
              },
