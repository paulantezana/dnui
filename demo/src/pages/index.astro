---
import Layout from '../layouts/Layout.astro';
---

<Layout title="DN-UI - Component Library">
  <section class="HomeBanner">
    <div class="HomeBanner-content">
      <div class="dn-container">
        <h1>Pdui CSS<span>v2.5.1</span></h1>
        <p style="max-width: 500px; margin-right: auto; margin-left: auto;">
          Una libreria CSS minimalista
        </p>
        <div class="dn-btn-group">
          <a class="dn-btn primary lg" href="/documentation/starter.html"
            >Empezar ahora</a
          ><a
            class="dn-btn lg"
            href="https://github.com/paulantezana/Pdui"
            target="_blanck">GitHub</a>
        </div>
      </div>
    </div>
  </section>
  <div class="HomeIntro">
    <div class="dn-container">
      <div class="HomeIntro-video">
        <div class="HomeIntro-videoPlay" data-modaltrigger="videoPlay"></div>
      </div>
      <div class="dn-modal-wrapper" data-modal="videoPlay">
        <div class="dn-modal">
          <div class="dn-modal-close" data-modalclose="videoPlay">
            <svg
              viewBox="64 64 896 896"
              class=""
              data-icon="close"
              width="1em"
              height="1em"
              fill="var(--zinc-5)"
              aria-hidden="true"
              focusable="false"
              ><path
                d="M563.8 512l262.5-312.9c4.4-5.2.7-13.1-6.1-13.1h-79.8c-4.7 0-9.2 2.1-12.3 5.7L511.6 449.8 295.1 191.7c-3-3.6-7.5-5.7-12.3-5.7H203c-6.8 0-10.5 7.9-6.1 13.1L459.4 512 196.9 824.9A7.95 7.95 0 0 0 203 838h79.8c4.7 0 9.2-2.1 12.3-5.7l216.5-258.1 216.5 258.1c3 3.6 7.5 5.7 12.3 5.7h79.8c6.8 0 10.5-7.9 6.1-13.1L563.8 512z"
              ></path></svg>
          </div>
          <div
            class="dn-modal-header"
            style="background: var(--zinc-10); color: var(--zinc-5)"
          >
            Introduction
          </div>
          <div class="dn-video">
            <iframe
              width="560"
              height="315"
              src="https://www.youtube.com/embed/Ao0bJ3IOBro"
              frameborder="0"
              allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture"
              allowfullscreen></iframe>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>
